{
  "version": 2,
  "installCommand": "npm install --include=dev --registry=https://registry.npmjs.org/ --no-audit --no-fund",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
