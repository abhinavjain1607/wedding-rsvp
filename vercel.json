{
  "version": 2,
  "installCommand": "rm -rf node_modules package-lock.json && npm install --include=dev --legacy-peer-deps",
  "buildCommand": "npm run build:fallback",
  "outputDirectory": "dist/public",
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
